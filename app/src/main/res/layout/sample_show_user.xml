<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">  <!-- Added padding for better spacing -->

    <!-- Profile Picture -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/profile_image"
        android:layout_marginStart="8dp"
        android:padding="4dp"
        android:src="@drawable/avtar3"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp"/> <!-- Fixed syntax -->

    <!-- User Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="12dp">  <!-- Added margin to separate text from image -->

        <!-- Username -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usernamelist"
            android:text="Yashraj Upadhyay"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <!-- Last Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lastmessage"
            android:text="Last message"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:paddingTop="2dp"/>
    </LinearLayout>

</LinearLayout>
